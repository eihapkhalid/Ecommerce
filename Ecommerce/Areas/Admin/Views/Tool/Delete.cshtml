@model ToolViewModel
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
    <div class="row">
        <div class="col-12 text-center">
                <h2 class="text-white py-2">@Resources.DeleteTool</h2>
        </div>
    </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="inpTbTool.ToolId" hidden />
            <div class="border p-3 mt-4">
                <div class="form-group col-12">
                    <label asp-for="inpTbTool.ToolName"  class="ms-2">@Resources.ToolName</label>
                    <input asp-for="inpTbTool.ToolName" disabled class="form-control border-0 shadow" />
                </div>
                <div class="form-group col-12">
                    <label asp-for="inpTbTool.ToolCurrentState" class="ms-2">@Resources.ToolCurrentState</label>
                    <input asp-for="inpTbTool.ToolCurrentState" disabled class="form-control border-0 shadow" />
                </div>

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">@Resources.Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Tool" asp-action="Index" class="btn btn-secondary border  form-control">
                            @Resources.BacktoList
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>


