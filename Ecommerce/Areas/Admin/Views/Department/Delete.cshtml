@model TbDepartment
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
    <div class="row">
        <div class="col-12 text-center">
                <h2 class="text-white py-2"> @Resources.DeleteDepartment</h2>
        </div>
    </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="DepartmentId" hidden />
            <div class="border p-3 mt-4">
                <div class="form-group col-12">
                    <label> @Resources.DepartmentName</label>
                    <input asp-for="DepartmentName" disabled class="form-control border-0 shadow" />
                </div>
                <div class="form-group col-12">
                    <label>@Resources.DepartmentCurrentState</label>
                    <input asp-for="DepartmentCurrentState" disabled class="form-control border-0 shadow" />
                </div>

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control"> @Resources.Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Department" asp-action="Index" class="btn btn-secondary border  form-control"> @Resources.BacktoList </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>