@model List<TbDepartment>

<div class="main-panel">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@Resources.CategorysDatatable</h2>
            </div>
        </div>
    </div>
    <div class="content-wrapper">
        <div class="col-6 text-end">
            <a asp-controller="Department" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>  @Resources.CreateNewDepartment
            </a>
        </div>
    <div class="card">
        <div class="card-body">
        <h4 class="card-title">@Resources.DepartmentDatatable</h4>
        <div class="row">
            <div class="col-12">
            <table id="order-listing" class="table">
                <thead>
                <tr>
                    <th>
                        @Resources.DepartmentName
                    </th>
                    <th>
                        @Resources.DepartmentCurrentState
                    </th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var obj in Model.OrderBy(u => u.DepartmentId))
                {
                    <tr>
                        <td>@obj.DepartmentName</td>
                        <td>
                                    @obj.DepartmentCurrentState
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Department" asp-action="Edit" asp-route-department_id="@obj.DepartmentId" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i>  @Resources.Edit </a>
                                <a asp-controller="Department" asp-action="Delete" asp-route-department_id="@obj.DepartmentId" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i>  @Resources.Delete </a>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
            </div>
        </div>
        </div>
    </div>
    </div>
    <!-- content-wrapper ends -->
    <!-- partial -->
</div>
<!-- main-panel ends -->

