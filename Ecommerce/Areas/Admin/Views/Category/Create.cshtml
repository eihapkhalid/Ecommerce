@model CategoryViewModel

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@Resources.CreateCategory</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-group col-12">
                    <label>@Resources.CategoryName</label>
                    <input asp-for="inpTbCategory.CategoryName" class="form-control border-0 shadow" />
                    <span asp-validation-for="inpTbCategory.CategoryName" class="text-danger"></span>
                </div>
                <div class="form-group col-12">
                     <label>@Resources.DepartmentId</label>
                    <select asp-for="@Model.inpTbCategory.DepartmentId" asp-items="@Model.LisTbDepartment" class="form-select border-0 shadow">
                        <option disabled selected> @Resources.SelectDepartment</option>
                    </select>
                    <span asp-validation-for="inpTbCategory.DepartmentId" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">@Resources.Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary border  form-control">
                            @Resources.BacktoList
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

