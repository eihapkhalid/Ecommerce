@model CategoryViewModel
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
    <div class="row">
        <div class="col-12 text-center">
                <h2 class="text-white py-2">@Resources.DeleteCategory</h2>
        </div>
    </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="inpTbCategory.CategoryId" hidden />
            <div class="border p-3 mt-4">
                <div class="form-group col-12">
                    <label >@Resources.CategoryName</label>
                    <input asp-for="inpTbCategory.CategoryName" disabled class="form-control border-0 shadow" />
                </div>
                <div class="form-group col-12">
                    <label >@Resources.CategoryCurrentState</label>
                    <input asp-for="inpTbCategory.CategoryCurrentState" disabled class="form-control border-0 shadow" />
                </div>

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">@Resources.Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border  form-control">
                            @Resources.BacktoList
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>


