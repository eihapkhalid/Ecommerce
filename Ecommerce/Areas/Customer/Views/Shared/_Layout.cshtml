@{
    var indexShopViewModel = ViewBag.IndexShopViewModel as IndexShopViewModel;
    var layoutViewModel = ViewBag.LayoutViewModel as LayoutViewModel;
}
<!doctype html>
<html class="no-js" lang="ar">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Uren - Car Accessories Shop HTML Template</title>
    <meta name="robots" content="noindex, follow" />
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="~/uren/assets/images/favicon.ico">

    <!-- CSS
    ============================================ -->
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/uren/assets/css/vendor/bootstrap.min.css">
    <!-- Fontawesome -->
    <link rel="stylesheet" href="~/uren/assets/css/vendor/font-awesome.css">
    <!-- Fontawesome Star -->
    <link rel="stylesheet" href="~/uren/assets/css/vendor/fontawesome-stars.css">
    <!-- Ion Icon -->
    <link rel="stylesheet" href="~/uren/assets/css/vendor/ion-fonts.css">
    <!-- Slick CSS -->
    <link rel="stylesheet" href="~/uren/assets/css/plugins/slick.css">
    <!-- Animation -->
    <link rel="stylesheet" href="~/uren/assets/css/plugins/animate.css">
    <!-- jQuery Ui -->
    <link rel="stylesheet" href="~/uren/assets/css/plugins/jquery-ui.min.css">
    <!-- Lightgallery -->
    <link rel="stylesheet" href="~/uren/assets/css/plugins/lightgallery.min.css">
    <!-- Nice Select -->
    <link rel="stylesheet" href="~/uren/assets/css/plugins/nice-select.css">

    <!-- Vendor & Plugins CSS (Please remove the comment from below vendor.min.css & plugins.min.css for better website load performance and remove css files from the above) -->
    <!--
    <script src="~/uren/assets/js/vendor/vendor.min.js"></script>
    <script src="~/uren/assets/js/plugins/plugins.min.js"></script>
    -->
    <!-- Main Style CSS (Please use minify version for better website load performance) -->
    <link rel="stylesheet" href="~/uren/assets/css/style.css">
    <!--<link rel="stylesheet" href="~/uren/assets/css/style.min.css">-->

</head>

<style>
    /* تعديل اتجاه النص في العناصر */
    body {
        direction: rtl;
    }

    .nice-select::after {
        right: auto;
        left: 10px;
    }

    .select-search-category-wrapper {
        position: relative;
        display: inline-block;
    }

    .category-arrow {
        position: absolute;
        left: -10px;
        top: 50%;
        transform: translateY(-50%);
        color: #000;
        font-size: 18px;
    }
</style>

<body class="template-color-1 text-right">

    <div class="main-wrapper">

        <!-- Begin Uren's Header Main Area -->
        <header class="header-main_area header-main_area-2 bg--black">
            <div class="header-middle_area">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xl-3 col-lg-2 col-md-3 col-sm-5">
                            <div class="header-logo_area">
                                <a href="index.html">
                                    <img src="~/uren/assets/images/menu/logo/1.png" alt="Uren's Logo">
                                </a>
                            </div>
                        </div>
                        <div class="col-xl-5 col-lg-6 d-none d-lg-block">
                            <div class="hm-form_area">
                                <!-- All Categories start & search category start -->
                                <form action="#" class="hm-searchbox">
                                    <div class="select-search-category-wrapper">
                                        <span class="category-arrow">|</span>
                                        <select class="nice-select select-search-category">
                                            <option value="0">@Resources.AllCategories</option>
                                            @foreach (var category in indexShopViewModel.lstTbCategorys)
                                            {
                                                var categoryTools = indexShopViewModel.lstTbTools.Where(tool => tool.CategoryId == category.CategoryId).ToList();
                                                if (categoryTools.Count > 0)
                                                {
                                                    <option value="@category.CategoryId">@category.CategoryName</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                    <input type="text" placeholder="@Resources.EnterTextsearch">
                                    <button class="header-search_btn" type="submit"><i class="ion-ios-search-strong"><span>@Resources.Search</span></i></button>
                                </form>
                                <!-- All Categories start & search category end -->
                            </div>
                        </div>


                        <div class="col-lg-4 col-md-9 col-sm-7">
                            <div class="header-right_area">
                                <ul>
                                    <li class="mobile-menu_wrap d-flex d-lg-none">
                                        <a href="#mobileMenu" class="mobile-menu_btn toolbar-btn color--white">
                                            <i class="ion-navicon"></i>
                                        </a>
                                    </li>
                                    <!-- Cart start-->
                                    <li class="minicart-wrap">
                                        <a href="#miniCart" class="minicart-btn toolbar-btn">
                                            <div class="minicart-count_area">
                                                <span class="item-count">3</span>
                                                <i class="ion-bag"></i>
                                            </div>
                                            <div class="minicart-front_text">
                                                <span>@Resources.Cart</span>
                                                <span class="total-price">462.4</span>
                                            </div>
                                        </a>
                                    </li>
                                    <!-- Cart End-->
                                    <li class="contact-us_wrap">
                                        @foreach (var info in layoutViewModel.lstTbCompanyInformations)
                                        {
                                            <a href="tel://@info.CompanyInformationPhone"><i class="ion-android-call"></i>@info.CompanyInformationPhone</a>
                                        }
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="header-top_area">
                <div class="container-fluid">
                    <div class="row">
                        <div class="custom-category_col col-12">
                            <div class="category-menu category-menu-hidden">
                                <div class="category-heading">
                                    <h2 class="categories-toggle">
                                        <span>@Resources.ShopBy</span>
                                        <span>@Resources.Department</span>
                                    </h2>
                                </div>
                                <!-- department start-->
                                <div id="cate-toggle" class="category-menu-list">
                                    <ul>
                                        @foreach (var depart in indexShopViewModel.lstTbDepartments)
                                        {
                                            var categories = indexShopViewModel.lstTbCategorys.Where(cat => cat.DepartmentId == depart.DepartmentId).ToList();
                                            if (categories.Count > 0)
                                            {
                                                <li class="right-menu">
                                                    <a href="shop-left-sidebar.html">@depart.DepartmentName f</a>
                                                    <ul class="cat-mega-menu">
                                                        @foreach (var category in categories)
                                                        {
                                                            <li class="right-menu cat-mega-title">
                                                                <a href="shop-left-sidebar.html">@category.CategoryName</a>
                                                                <ul>
                                                                    @foreach (var tool in indexShopViewModel.lstTbTools)
                                                                    {
                                                                        if (tool.CategoryId == category.CategoryId)
                                                                        {
                                                                            <li><a href="shop-left-sidebar.html">@tool.ToolName</a></li>
                                                                        }
                                                                    }
                                                                </ul>
                                                            </li>
                                                        }
                                                    </ul>
                                                </li>
                                            }
                                        }
                                        <li>
                                            <a class="rx-default">@Resources.MoreCategories</a>
                                        </li>
                                    </ul>
                                </div>
                                <!-- department end-->

                            </div>
                        </div>

                        <!-- main menu start-->
                        <div class="custom-menu_col col-12 d-none d-lg-block">
                            <div class="main-menu_area position-relative">
                                <nav class="main-nav">
                                    <ul class="d-flex justify-content-between">
                                        <li><a asp-controller="Home" asp-action="Index">@Resources.Home</a></li>
                                        <li><a asp-controller="Shop" asp-action="Index">@Resources.Shop</a></li>
                                        <li><a asp-area="Customer" asp-controller="About" asp-action="Index">@Resources.AboutUs</a></li>
                                        <li style="margin-right: 25px;"><a asp-controller="Tell" asp-action="Index">@Resources.Contact</a></li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                        <!-- main menu end-->

                        <div class="custom-setting_col col-12 d-none d-lg-block">
                            <div class="ht-right_area">
                                <div class="ht-menu">
                                    <ul>
                                        <!--Currency start-->
                                        <li>
                                            <a href="javascript:void(0)"><i class="fa fa-chevron-down"></i><span>@Resources.Currency</span></a>
                                            <ul class="ht-dropdown ht-currency">
                                                @foreach (var Currency in layoutViewModel.lstTbCurrencys)
                                                {
                                                    <li><a href="javascript:void(0)">@Currency.CurrencyName</a></li>
                                                }
                                            </ul>
                                        </li>
                                        <!--Currency end-->
                                        <!--Language start-->
                                        <li>
                                            <a href="javascript:void(0)"><i class="fa fa-chevron-down"></i> <span>@Resources.Language</span></a>
                                            <ul class="ht-dropdown">
                                                @foreach (var lang in layoutViewModel.lstTbLanguages)
                                                {
                                                    <li class="active">
                                                        <a href="javascript:void(0)"><img src="~/uren/assets/images/menu/icon/1.jpg" alt="JB's Language Icon">@lang.LanguageName</a>
                                                    </li>
                                                }
                                            </ul>
                                        </li>
                                        <!--Language end-->
                                        <!--My Account start-->
                                        <li>
                                            <a href="my-account.html"></span> <i class="fa fa-chevron-down"></i><span>@Resources.MyAccount</span></a>
                                            <ul class="ht-dropdown ht-my_account">
                                                <li><a href="javascript:void(0)">@Resources.Register</a></li>
                                                <li class="active"><a href="javascript:void(0)">@Resources.Login</a></li>
                                            </ul>
                                        </li>
                                        <!--My Account end-->
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Uren's Header Main Area End Here -->
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <!-- Begin Uren's Footer Area -->
        <div class="uren-footer_area">
            <div class="footer-top_area">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">

                            <!--Subscribe start-->
                            <div class="newsletter-area">
                                <h3 class="title">@Resources.JoinOurNewsletterNow</h3>
                                <p class="short-desc">@Resources.GetEmailupdatesaboutourlatestshopandspecialoffers</p>
                                <div class="newsletter-form_wrap">
                                    <form action="http://devitems.us11.list-manage.com/subscribe/post?u=6bbb9b6f5827bd842d9640c82&amp;id=05d85f18ef" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="newsletters-form validate" target="_blank" novalidate>
                                        <div id="mc_embed_signup_scroll">
                                            <div id="mc-form" class="mc-form subscribe-form">
                                                <input id="mc-email" class="newsletter-input" type="email" autocomplete="off" placeholder="@Resources.Enteryouremail" />
                                                <button class="newsletter-btn" id="mc-submit">@Resources.Subscribe</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <!--Subscribe end-->

                        </div>
                    </div>
                </div>
            </div>
            <div class="footer-middle_area">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="footer-widgets_info">

                                <!-- Logo company -->
                                <div class="footer-widgets_logo">
                                    <a href="#">
                                        <img src="~/uren/assets/images/menu/logo/1.png" alt="Uren's Footer Logo">
                                    </a>
                                </div>
                                <!-- Logo company -->
                                @foreach (var descrpt in layoutViewModel.lstTbCompanyInformations)
                                {
                                    <!-- descption company -->
                                    <div class="widget-short_desc">
                                        <p>@descrpt.CompanyInformationDescription</p>
                                    </div>
                                    <!-- descption company -->
                                    <!-- company info start-->
                                    <div class="widgets-essential_stuff">
                                        <ul>
                                            <!--Address-->
                                            <li class="uren-address"><span>@Resources.Address </span>@descrpt.CompanyInformationAddress</li>
                                            <!--call-->
                                            <li class="uren-phone text-right"><span>@Resources.ContactUs</span> <a href="tel://@descrpt.CompanyInformationPhone">@descrpt.CompanyInformationPhone</a></li>
                                            <!--Email-->
                                            <li class="uren-email"><span>@Resources.Email</span> <a href="@descrpt.CompanyInformationEmail">@descrpt.CompanyInformationEmail</a></li>
                                        </ul>
                                    </div>
                                    <!-- company info end-->
                                    <!--link start
                                    <div class="uren-social_link">
                                        <ul>
                                            <li class="facebook">
                                                <a href="https://www.facebook.com/" data-toggle="tooltip" target="_blank" title="Facebook">
                                                    <i class="fab fa-facebook"></i>
                                                </a>
                                            </li>
                                            <li class="twitter">
                                                <a href="https://twitter.com/" data-toggle="tooltip" target="_blank" title="Twitter">
                                                    <i class="fab fa-twitter-square"></i>
                                                </a>
                                            </li>
                                            <li class="google-plus">
                                                <a href="https://www.plus.google.com/discover" data-toggle="tooltip" target="_blank" title="Google Plus">
                                                    <i class="fab fa-google-plus"></i>
                                                </a>
                                            </li>
                                            <li class="instagram">
                                                <a href="https://rss.com/" data-toggle="tooltip" target="_blank" title="Instagram">
                                                    <i class="fab fa-instagram"></i>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                    --link end-->
                                }
                            </div>
                        </div>
                        <div class="col-lg-8">
                            <div class="footer-widgets_area">
                                <div class="row">

                                    <!--INFORMATION start-->
                                    <div class="col-lg-3 col-md-6">
                                        <div class="footer-widgets_title">
                                            <h3>@Resources.Information</h3>
                                        </div>
                                        <div class="footer-widgets">
                                            <ul>
                                                <li><a href="javascript:void(0)">@Resources.AboutUs</a></li>
                                                <li><a href="javascript:void(0)">@Resources.PrivacyPolicy</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <!--INFORMATION end-->
                                    <!--Customer Service start-->
                                    <div class="col-lg-3 col-md-6">
                                        <div class="footer-widgets_title">
                                            <h3>@Resources.CustomerService</h3>
                                        </div>
                                        <div class="footer-widgets">
                                            <ul>
                                                <li><a href="javascript:void(0)">@Resources.ContactUs</a></li>
                                                <li><a href="javascript:void(0)">@Resources.SiteMap</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <!--Customer Service end-->
                                    <!--Extras start-->
                                    <div class="col-lg-3 col-md-6">
                                        <div class="footer-widgets_title">
                                            <h3>@Resources.Extras</h3>
                                        </div>
                                        <div class="footer-widgets">
                                            <ul>
                                                <li><a href="javascript:void(0)">@Resources.AboutUs</a></li>
                                                <li><a href="javascript:void(0)">@Resources.PrivacyPolicy</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <!--Extras end-->
                                    <!--My Account start-->
                                    <div class="col-lg-3 col-md-6">
                                        <div class="footer-widgets_title">
                                            <h3>@Resources.MyAccount</h3>
                                        </div>
                                        <div class="footer-widgets">
                                            <ul>
                                                <li><a href="javascript:void(0)">@Resources.MyAccount</a></li>
                                                <li><a href="javascript:void(0)">@Resources.OrderHistory</a></li>
                                                <li><a href="javascript:void(0)">@Resources.WishList</a></li>
                                                <li><a href="javascript:void(0)">@Resources.Newsletter</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <!--My Account end-->

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!--Templateshub start-->
            <div class="footer-bottom_area">
                <div class="container-fluid">
                    <div class="footer-bottom_nav">
                        <div class="row">
                            <div class="col-lg-6 col-md-6">
                                <div class="copyright">
                                    <span><a href="templateshub.net">Templateshub</a></span>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <div class="payment">
                                    <a href="#">
                                        <img src="~/uren/assets/images/footer/payment/1.png" alt="Uren's Payment Method">
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--Templateshub end1-->

        </div>
        <!-- Uren's Footer Area End Here -->
        <!-- JS
        ============================================ -->
        <!-- jQuery JS -->
        <script src="~/uren/assets/js/vendor/jquery-1.12.4.min.js"></script>
        <!-- Modernizer JS -->
        <script src="~/uren/assets/js/vendor/modernizr-2.8.3.min.js"></script>
        <!-- Popper JS -->
        <script src="~/uren/assets/js/vendor/popper.min.js"></script>
        <!-- Bootstrap JS -->
        <script src="~/uren/assets/js/vendor/bootstrap.min.js"></script>

        <!-- Slick Slider JS -->
        <script src="~/uren/assets/js/plugins/slick.min.js"></script>
        <!-- Barrating JS -->
        <script src="~/uren/assets/js/plugins/jquery.barrating.min.js"></script>
        <!-- Counterup JS -->
        <script src="~/uren/assets/js/plugins/jquery.counterup.js"></script>
        <!-- Nice Select JS -->
        <script src="~/uren/assets/js/plugins/jquery.nice-select.js"></script>
        <!-- Sticky Sidebar JS -->
        <script src="~/uren/assets/js/plugins/jquery.sticky-sidebar.js"></script>
        <!-- Jquery-ui JS -->
        <script src="~/uren/assets/js/plugins/jquery-ui.min.js"></script>
        <script src="~/uren/assets/js/plugins/jquery.ui.touch-punch.min.js"></script>
        <!-- Lightgallery JS -->
        <script src="~/uren/assets/js/plugins/lightgallery.min.js"></script>
        <!-- Scroll Top JS -->
        <script src="~/uren/assets/js/plugins/scroll-top.js"></script>
        <!-- Theia Sticky Sidebar JS -->
        <script src="~/uren/assets/js/plugins/theia-sticky-sidebar.min.js"></script>
        <!-- Waypoints JS -->
        <script src="~/uren/assets/js/plugins/waypoints.min.js"></script>
        <!-- jQuery Zoom JS -->
        <script src="~/uren/assets/js/plugins/jquery.zoom.min.js"></script>

        <!-- Vendor & Plugins JS (Please remove the comment from below vendor.min.js & plugins.min.js for better website load performance and remove js files from avobe) -->
        <!--
        <script src="~/uren/assets/js/vendor/vendor.min.js"></script>
        <script src="~/uren/assets/js/plugins/plugins.min.js"></script>
        -->
        <!-- Main JS -->
        <script src="~/uren/assets/js/main.js"></script>

        @await RenderSectionAsync("Scripts", required: false)
</body>
</html>